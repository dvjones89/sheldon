#!/usr/bin/env ruby

require 'thor'
require_relative '../lib/sheldon'

class Launcher < Thor
  desc "list", "lists the contents of Sheldon's brain"
  def list
    Sheldon.new.list
  end

  desc "learn PATH_TO_TARGET", "Add a new file/folder to Sheldon's brain"
  def learn(rel_path_to_target)
    Sheldon.new.learn(rel_path_to_target)
  end

  desc "link FRIENDLY_NAME", "Link a file in Sheldon's brain back to it's original filesystem location"
  def link(friendly_name)
    Sheldon.new.link(friendly_name)
  end
end

Launcher.start(ARGV)
